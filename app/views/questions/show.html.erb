<% provide :page_title, @question.title %>
<% currently_at 'Question' %>

<h1 class="mb-4"> <%= @question.title %></h1>


  <div class="lead my-3">
    <%= sanitize @question.body %>
  </div>

  <%= link_to( 'Back', questions_path, class: 'btn btn-primary' )%>
  <%= link_to( 'Edit', edit_question_path(@question), class: 'btn btn-secondary') %>
  <%= link_to('Destroy', edit_question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Are you sure you want to delete?'} ) %>

<hr class="my-3">

<h2>Write your answer:</h2>


<%= render 'answers/form' %>


<h2 class="mt-5">Answers list:</h2>

<% @answers.each do |a| %>
  <article class="mb-3" id="answer-<%= answer.id %>">
        <span>

          <span>
            <%= a.body %>
          </span>

          <%= link_to "Edit", edit_question_answer_path(@question, a), class: "btn btn-info btn-sm" %>
          <%= link_to "Delete", question_answer_path(@question, a), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: 'Are you sure?'}%>

      </span>
  </article>
<% end %>
