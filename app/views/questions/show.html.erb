<h1 class="mb-4"> <%= @question.title %></h1>


  <p class="lead my-3"> 
    <%= @question.body %>
  </p>

  <%= link_to( 'Back', questions_path, class: 'btn btn-primary' )%>
  <%= link_to( 'Edit', edit_question_path(@question), class: 'btn btn-secondary') %>
  <%= link_to('Destroy', edit_question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Are you sure you want to delete?'} ) %>

<hr class="my-3">

<h2>Write your answer:</h2>


<%= render 'shared/erros', object: @answer %>
<%# <%= render 'answers/form' %> %>


<%= form_with model:  [ @question, @answer ]  do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :body %>
    </div>

<div class="col-sm-10">
  <%= f.text_area :body, class: 'form-control' %>
</div>
  </div>

  <%= f.submit "Submit answer!", class: "btn btn-primary" %>
<% end %>

<h2 class="mt-5">Answers list:</h2>

<% @answers.each do |answer| %>
  <article class="mb-3">
        <span>

          <span>
            <%= answer.body %>
          </span>
          <%= link_to "Edit", question_answers_path(@question, answer), class: "btn btn-info btn-sm" %>
          <%= link_to "Delete", question_answers_path(@question, answer), class: 'btn btn-danger btn-sm', data: {method: :delete, confirm: 'Are you sure?'}%>

      </span>
  </article>
<% end %>